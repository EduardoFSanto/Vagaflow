// schema.prisma

// Conexão com o banco de dados (SQLite neste caso)
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Gerador do Prisma Client
generator client {
  provider = "prisma-client-js"
}

// Modelo de Empresa
model Company {
  id        Int      @id @default(autoincrement())  // ID da empresa
  name      String
  slug      String   @unique  // Slug para identificação
  email     String   @unique  // E-mail da empresa
  password  String
  createdAt DateTime @default(now())  // Data de criação
  jobs      Job[]
}

// Modelo de Vaga (Job)
model Job {
  id          Int        @id @default(autoincrement())  // ID da vaga
  title       String
  description String
  location    String
  workMode    String     // Remoto, Híbrido, Presencial
  seniority   String     // Junior, Pleno, Senior
  company     Company   @relation(fields: [companyId], references: [id])
  companyId   Int
  createdAt   DateTime  @default(now())  // Data de criação
  applications Application[]
}

// Modelo de Candidato (Candidate)
model Candidate {
  id          Int          @id @default(autoincrement())  // ID do candidato
  name        String
  email       String       @unique  // E-mail do candidato
  linkedinUrl String?      // URL do LinkedIn (opcional)
  applications Application[]
}

// Modelo de Candidatura (Application)
model Application {
  id          Int          @id @default(autoincrement())  // ID da candidatura
  job         Job          @relation(fields: [jobId], references: [id])
  jobId       Int
  candidate   Candidate    @relation(fields: [candidateId], references: [id])
  candidateId Int
  createdAt   DateTime     @default(now())  // Data de criação da candidatura
  updatedAt   DateTime     @updatedAt  // Data de atualização da candidatura
}
